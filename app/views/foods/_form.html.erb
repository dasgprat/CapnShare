<div class="container">
    <div class="row">
        <div class="col-md-6">
            <%= form_for food do |f| %>
            <div>
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div> 
            <div>
                <%= f.label :description %>
                <%= f.text_area :description %>
            </div> 
            <div>
                <%= f.label :image %>
                <%= f.file_field :image %>
            </div>
            <div>
                <%= f.label :email %>
                <%= f.text_field :contact %>
            </div> 
            <%= f.submit %>
            <% end %>
        </div>              
    </div>
</div>
